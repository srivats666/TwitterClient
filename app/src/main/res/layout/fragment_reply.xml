<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.codepath.apps.twitterclient.reply.ReplyFragment" android:padding="10dp" android:background="#ffffff">

    <!-- TODO: Update blank fragment layout -->
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Test" android:id="@+id/tvReplyTo"
        android:textColor="#A6A6A6"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etReply"
        android:textSize="14sp"
        android:layout_below="@+id/tvReplyTo"
        android:layout_alignParentLeft="true"
        android:hint="@string/reply_hint_label"
        android:layout_marginTop="23dp"
        android:maxLength="140"
        android:inputType="text"
        android:imeOptions="actionSend"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tweetCount"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/btReply"
        android:layout_toLeftOf="@+id/btReply"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="15dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tweet"
        android:id="@+id/btReply"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_horizontal|bottom"
        android:background="#0084B4"
        android:padding="5dp"
        />

</RelativeLayout>
